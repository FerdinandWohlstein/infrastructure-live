# Example Terraform Variables
# Copy this file to terraform.tfvars and fill in your values
# terraform.tfvars is gitignored for security

# Required
ssh_public_key     = "ssh-ed25519 AAAA... your-key-here"
admin_cidrs        = ["YOUR_IP/32", "10.42.0.0/24"]
terraform_role_arn = "arn:aws:iam::YOUR_ACCOUNT_ID:role/TerraformProvisionerRole"

# Optional overrides
# aws_region        = "us-east-1"
# availability_zone = "us-east-1f"
# name              = "k3s-single"
# instance_type     = "t3.small"
# environment       = "prod"
# project           = "k3s-cluster"
# root_volume_size  = 30
# allocate_eip      = true
# enable_ssh        = true
# wireguard_port    = 51820
# public_http       = true
# public_https      = true
